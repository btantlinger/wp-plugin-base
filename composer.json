{
    "name": "webmoves/plugin-base",
    "description": "A simple base plugin framework for wordpress",
    "type": "wordpress-plugin",
    "authors": [
        {
            "name": "Bob Tantlinger",
            "email": "bob@webmoves.net"
        }
    ],
    "require": {
        "php": ">=8.0",
        "monolog/monolog": "^3.0",
        "vlucas/phpdotenv": "^5.0",
        "wp-cli/wp-cli-bundle": "^2.12",
        "php-di/php-di": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "wp-coding-standards/wpcs": "*",
        "phpstan/phpstan": "^1.0",
        "mockery/mockery": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "WebMoves\\PluginBase\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WebMoves\\PluginBase\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "phpstan": "vendor/bin/phpstan analyse src",
        "phpcs": "vendor/bin/phpcs src --standard=WordPress"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}